@model List<Admin>
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Welcome,@Model[0].admin_name</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" name="admin_id" value="@Model[0].admin_id" />
            <input type="text" placeholder="Enter Your Name: " name="admin_name" class="form-control my-3" value="@Model[0].admin_name" />
            <input type="text" placeholder="Enter Your Email: " name="admin_email" class="form-control my-3" value="@Model[0].admin_email" />
            <input type="password" placeholder="Enter Your Password: " name="admin_password" class="form-control my-3" value="@Model[0].admin_password" />
            <input type="hidden" name="admin_image" value="@Model[0].admin_image" />
            <input type="submit" value="Update Profile" class="form-control my-3 btn btn-primary" />
        </form>
    </div>
    <div class="col-md-2"></div>
</div>